datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client/gameData"
}

model TravelRoute {
  id       String     @id @default(cuid())
  from     String
  to       String
  distance Int
  GameData GameData[]
  Place    Place?     @relation(fields: [placeId], references: [id])
  placeId  String?

  TravelRouteOnGameData TravelRouteOnGameData[]
  @@unique([from, to])
}

model Place {
  id           String        @id @default(cuid())
  name         String
  travelRoutes TravelRoute[]
}

model GameData {
  id                    String                  @id @default(cuid())
  userId                String                  @unique
  currentPlaceId        String
  travelRoutes          TravelRoute[]
  lastComputedTimestamp DateTime                @default(now())
  TravelRouteOnGameData TravelRouteOnGameData[]
}

model TravelRouteOnGameData {
  gameData      GameData    @relation(fields: [gameDataId], references: [id])
  gameDataId    String
  travelRoute   TravelRoute @relation(fields: [travelRouteId], references: [id])
  travelRouteId String

  @@id([gameDataId, travelRouteId])
}
